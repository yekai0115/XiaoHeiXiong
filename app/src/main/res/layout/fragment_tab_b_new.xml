<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grays2"
    android:orientation="vertical">
    <include layout="@layout/xiaoheixiong_title_red" />
    <td.com.xiaoheixiong.views.pulltorefresh.PullLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include layout="@layout/refresh_head" />

        <td.com.xiaoheixiong.views.pulltorefresh.PullableListView
            android:id="@+id/lv_toutiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:dividerHeight="10dp"
            android:divider="@color/bg_blank_color" />

        <include layout="@layout/load_more" />
    </td.com.xiaoheixiong.views.pulltorefresh.PullLayout>

</LinearLayout>
